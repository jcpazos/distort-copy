
set smartindent

" size of a hard tabstop
set tabstop=4

" size of an "indent"
set shiftwidth=4

" use appropriate number of spaces to insert a <Tab>
" to insert a real tab, use CTRL-V<Tab>
set expandtab

" a combination of spaces and tabs are used to simulate tab stops at a width
" other than the (hard)tabstop
set softtabstop=0

set smarttab

" being clever about where indents go
set smartindent

